<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CatalogFragment">

    <TextView
        android:id="@+id/womens_clothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:textStyle="bold"
        android:text="Women's clothing"
        android:textSize="20dp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        />

    <TextView
        android:id="@+id/mens_clothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:textStyle="bold"
        android:text="Men's clothing"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/jewelery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:textStyle="bold"
        android:text="Jewelery"
        android:textSize="20dp"
        android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>