<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_text"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/red_maxi_dress" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/abril_fatface_regular"
        android:gravity="center"
        android:text="Red maxi dress"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:gravity="center"
        android:text="Red Maxi Dress with long sleeves and detailed front pattern"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/abril_fatface_regular"
        android:text="@string/_99_us"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- Horizontal layout for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:textSize="18sp"
            android:backgroundTint="@color/black_text"
            android:textColor="@android:color/white"
            android:padding="16dp" />

        <!-- Add to Favorites Icon Button -->
        <ImageButton
            android:id="@+id/addToFavoritesButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add to Favorites"
            android:padding="4dp"
            android:src="@drawable/gravity_ui__heart"
            app:tint="@color/black_text"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</LinearLayout>
