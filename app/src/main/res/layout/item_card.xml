<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_text"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"

        android:src="@drawable/red_maxi_dress" />


    <!--    <ImageView-->
    <!--        android:id="@+id/collectionLogo"-->
    <!--        android:layout_width="292dp"-->
    <!--        android:layout_height="43dp"-->
    <!--        android:layout_marginHorizontal="56dp"-->
    <!--        android:layout_marginVertical="12dp"-->
    <!--        android:scaleType="centerCrop"-->

    <!--        android:src="@drawable/collection_logo" />-->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/abril_fatface_regular"
        android:gravity="center"
        android:text="Red maxi dress"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:gravity="center"
        android:text="Red Maxi Dress with long sleeves and detailed front pattern"
        android:textAlignment="center"

        android:textSize="16sp" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/abril_fatface_regular"
        android:text="@string/_99_us"
        android:textAlignment="center"
        android:textSize="20dp"

        android:textStyle="bold" />


</LinearLayout>
