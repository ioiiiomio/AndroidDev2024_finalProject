<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_text">


    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"

        android:src="@drawable/red_maxi_dress" />


    <ImageView
        android:id="@+id/collectionLogo"
        android:layout_width="292dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="56dp"
        android:layout_marginVertical="12dp"
        android:scaleType="centerCrop"

        android:src="@drawable/collection_logo" />

    <TextView
        android:id="@+id/detailName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:textSize="16sp"
        android:textAlignment="center"

        android:text="Red Maxi Dress with long sleeves and detailed front pattern"/>

    <TextView
        android:id="@+id/detailPrice"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginVertical="12dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:fontFamily="@font/abrilfatface_regular"
        android:textStyle="bold"

        android:text="@string/_99_us"
        />




</LinearLayout>
