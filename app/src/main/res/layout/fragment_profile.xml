<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/profile_layout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/register_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oranienbaum_regular"
            android:text="Oops.. seems like you're not registered. Register now to access your bonuses and discounts"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Name"
            android:fontFamily="@font/oranienbaum_regular"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/oranienbaum_regular"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:fontFamily="@font/abril_fatface_regular"
            android:textSize="24dp"
            android:text="Log in"
            android:textColor="@android:color/black"
            android:background="@drawable/black_outline" />

    </LinearLayout>

<LinearLayout
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_icon" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/abril_fatface_regular"
            android:text="your name"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/baseline_edit_24" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_round"
        android:padding="16dp">

        <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oranienbaum_regular"
            android:text="Discount 20%"
            android:textColor="@color/white_text"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_info_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oranienbaum_regular"
            android:text="Bonuses: 200"
            android:layout_marginTop="40dp"
            android:textColor="@color/white_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discount"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_qr_code_scanner_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/white_text" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="My purchases"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="Settings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <TextView
        android:id="@+id/favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="Favourites"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <TextView
        android:id="@+id/cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="Delivery and shipment"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/oranienbaum_regular"
        android:text="Company policies"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <Button
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:text="Log out"
        android:textColor="@android:color/black"
        android:fontFamily="@font/abril_fatface_regular"
        android:textSize="24dp"
        android:background="@drawable/black_outline" />
</LinearLayout>

</LinearLayout>




